// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Usuarios {
  id          Int       @id @default(autoincrement())
  nome        String    @unique
  sobrenome   String?   
  email       String    @unique
  senha       String    @unique
  CPF         Int       @unique
  perfis      Perfis[]
}

model Perfis {
  id          Int       @id @default(autoincrement())
  titulo      String    @unique
  imagem      String
  user        Usuarios  @relation(fields: [userId], references: [id])
  userId      Int
  jogosFav    Jogo[]
}

model Jogo {
  id          Int       @id @default(autoincrement())
  titulo      String    @unique
  capa        String
  descricao   String
  ano         Int
  nota        Int?
  trailer     String?
  gmp         String?
  generos     Genero[]
  perfis      Perfis[]
}

model Genero {
  id          Int       @id @default(autoincrement())
  name        String    @unique
  jogos       Jogo[]
}